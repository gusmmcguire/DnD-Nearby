@model Encounter

<div class="jumbotron container text-dark box-shadow style-Boi">
    <h3>@Model.encounterName</h3>
    <h4>Number of Creatures: @Model.CreatureID.Count</h4>
    <form asp-controller="Encounter" asp-action="SingleEncounter">
        <input hidden name="encounterID" value="@Model.ID" />
        <input type="submit" value="View" class="btn btn-primary"/>
    </form>
    <form asp-controller="Encounter" asp-action="InitiativeTracker">
        <input hidden name="encounterID" value="@Model.ID" />
        <input type="submit" value="Initiative Tracker" class="btn btn-primary"/>
    </form>
</div>