@model List<Encounter>
@{
    ViewData["Title"] = "Encounter Collection Page";
    bool hasStats = Model != null && Model.Count() > 0;
}


@{
    if (!hasStats)
    {
        <form asp-controller="Encounter" asp-action="EncounterCollection">
            <label for="user">Account Username to Search for</label>
            <input name="user" placeholder="username"/>
            <input type="submit" />
        </form>
    }
    else
    {
        foreach (var encounter in Model)
        {
            <partial name="_EncounterPartialView" for="@encounter" />
            <br />
            <br />
        }
    }
}