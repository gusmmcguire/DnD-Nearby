@model IEnumerable<Item>
@{
    ViewData["Title"] = "Items";
}

@if (Model.Count() == 0 || Model == null)
{
    <h3>There are no items in the inventory - err - database.</h3>
}
else
{
    foreach (var item in Model)
    { 
        <partial name="_DisplayItemPartial.cshtml" for="@item"/>
    }
}

<a asp-controller="Item" asp-action="AddItemForm">Add Item</a>