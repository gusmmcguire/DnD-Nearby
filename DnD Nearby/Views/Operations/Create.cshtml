@model User
<div class="text-center w-25 mx-auto mt-5">
    <img class="w-25 mb-2" src="~/images/defaultUser.png" />
    <h1 class="background-green rounded text-white">Create User</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (ViewBag.Message != null)
    {
        <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
    }

    <form method="post">
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password"/>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>