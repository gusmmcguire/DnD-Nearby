@model Account
@{
    ViewData["Title"] = "Login Page";
    string warning = ViewBag.Warning;
}

<h3 class="alert-danger">@warning</h3>
<form asp-controller="Account" asp-action="LoginAction">

    <label for="Username">Username:</label>
    <input asp-for="Username" placeholder="Username" />
    <br />
    <label for="Password">Password:</label>
    <input asp-for="Password" placeholder="Password" type="password"/>
    <br />
    <input type="submit" />
</form>