@model Account
@{
    ViewData["Title"] = "Account Creation Page";
    string warning = ViewBag.Warning;
}

<h3 class="alert-danger">@warning</h3>
<form asp-controller="Account" asp-action="CreateAccount">
    <label for="Username">Username:</label>
    <input asp-for="Username" placeholder="Username" />
    <span asp-validation-for="Username" class="error-messages alert-danger"></span>
    <br />
    <label for="Password">Password:</label>
    <input asp-for="Password" placeholder="Password" />
    <span asp-validation-for="Password" class="error-messages alert-danger"></span>
    <br />
    <label for="FirstName">First Name:</label>
    <input asp-for="FirstName" placeholder="First Name" />
    <span asp-validation-for="FirstName" class="error-messages alert-danger"></span>
    <br />
    <label for="LastName">Last Name:</label>
    <input asp-for="LastName" placeholder="Last Name" />
    <span asp-validation-for="LastName" class="error-messages alert-danger"></span>
    <br />
    <input type="submit" />

</form>