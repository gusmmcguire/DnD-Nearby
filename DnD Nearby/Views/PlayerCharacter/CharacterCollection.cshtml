@model List<PlayerCharacter>
@{
    ViewData["Title"] = "Character Collection Page";
    bool hasCharacters = Model != null && Model.Count() > 0;
}

<h2 class="text-center">Character Collection</h2>
@{
    if (!hasCharacters)
    { 
        <div class="text-center">
            <h2>You have no Player Characters on your account</h2>
            <h3>Go <a asp-controller="PlayerCharacter" asp-action="CreateCharacter">here</a> to add one!</h3>
        </div>
    }
    else
    {
        foreach (var ch in Model)
        {
            <partial name="_CharacterPartialView" for="@ch" />
            <br />
            <br />
        }
    }
}