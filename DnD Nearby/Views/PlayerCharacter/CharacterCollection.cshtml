@model List<PlayerCharacter>
@{
    ViewData["Title"] = "Character Collection Page";
    bool hasCharacters = Model != null && Model.Count() > 0;
}


@{
    if (!hasCharacters)
    {
        <form asp-controller="PlayerCharacter" asp-action="CharacterCollection">
            <label for="user">Account Username to Search for</label>
            <input name="user" placeholder="username"/>
            <input type="submit" />
        </form>
    }
    else
    {
        foreach (var ch in Model)
        {
            <partial name="_CharacterPartialView" for="@ch" />
            <br />
            <br />
        }
    }
}